<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DoAn</title>
    <link rel="shortcut icon" href="~/Images/shortcuticon.png" type="image/png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="chrome-extension://gobpkdmjnhpopmpddhmhmbhkiienpfdo/css/translate_popup.css" />
    <link rel="stylesheet" href="~/CSS/StyleSheet1.css" type="text/css"/>
    <link rel="stylesheet" href="~/CSS/media2.css" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header>
        <div class="top">
            <div class="div_middle">
                <div class="logo">
                    <a href="/" title="DoAn - Sách điện tử">
                        <img alt="DoAn" src="~/Images/shortcuticon.png" />
                    </a>
                    <div class="clear"></div>
                </div>
                <div class="right">
                    <ul>
                        <li onclick="$('header .top_search').slideDown()" class="other"><i class="fa fa-search" aria-hidden="true"></i></li>
                        @if (Session["UserName"] != null)
                        {
                            <li class="user">
                                <i class="fa fa-user" aria-hidden="true"
                                   onclick="location.href='@Url.Action("Index", "Account", new { id = Session["UserName"] })'"></i>
                            </li>
                            <li class="user">
                                <i class="fa fa-sign-out" aria-hidden="true"
                                   onclick="location.href='@Url.Action("Logout", "Account")'"></i>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="/account/register">
                                    <button id="register">Đăng ký</button>
                                </a>
                            </li>
                            <li>
                                <a href="/account/login">
                                    <button id="login">Đăng nhập</button>
                                </a>
                            </li>
                        }
                    </ul>
                    <div class="clear"></div>
                </div>
                <div class="top_search">
                    <form method="get" action="@Url.Action("Index", "Books")">
                        <input class="search" value="@ViewBag.Keyword" id="search_input" name="search" placeholder="Bạn muốn tìm truyện gì?" />
                        <button type="submit">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="bottom">
            <div class="div_middle">
                <ul id="header_left_menu">
                    <li>
                        <p>
                            @Html.ActionLink("Trang chủ", "Index", "Home")
                        </p>
                    </li>
                    <li class="menu_hidden">
                        <p class="tags_name pc_hover mega_menu">
                            Thể loại
                            <i class="fa fa-caret-down"></i>
                        </p>
                        <div class="hidden_menu book_tags">
                            <div class="div_middle">
                                <div class="book_tags_content">
                                    <p>
                                        @Html.ActionLink("Hành động", "The-Loai", "Home", new { id = "Hanh-Dong" })
                                    </p>
                                    <p>
                                        @Html.ActionLink("Trinh thám", "The-Loai", "Home", new { id = "Trinh-tham" })
                                    </p>
                                    <p>
                                        @Html.ActionLink("Tâm lý", "Tam-ly", "The-Loai")
                                    </p>
                                    <p>
                                        @Html.ActionLink("V", "Tinh-cam", "The-Loai")
                                    </p>
                                    <p>
                                        @Html.ActionLink("Tình cảm", "Tinh-cam", "The-Loai")
                                    </p>
                                    <p>
                                        @Html.ActionLink("Tình cảm", "Tinh-cam", "The-Loai")
                                    </p>
                                    <p>
                                        @Html.ActionLink("Tình cảm", "Tinh-cam", "The-Loai")
                                    </p>
                                    <p>
                                        @Html.ActionLink("Tình cảm", "Tinh-cam", "The-Loai")
                                    </p>
                                    <p>
                                        @Html.ActionLink("Tình cảm", "Tinh-cam", "The-Loai")
                                    </p>
                                    <p>
                                        @Html.ActionLink("Tình cảm", "Tinh-cam", "The-Loai")
                                    </p>
                                    <p>
                                        @Html.ActionLink("Tình cảm", "Tinh-cam", "The-Loai")
                                    </p>
                                    <p>
                                        @Html.ActionLink("Tình cảm", "Tinh-cam", "The-Loai")
                                    </p>
                                    <p>
                                        @Html.ActionLink("Tình cảm", "Tinh-cam", "The-Loai")
                                    </p>
                                    <p>
                                        @Html.ActionLink("Tình cảm", "Tinh-cam", "The-Loai")
                                    </p>
                                    <p>
                                        @Html.ActionLink("Tình cảm", "Tinh-cam", "The-Loai")
                                    </p>
                                    <p>
                                        @Html.ActionLink("Tình cảm", "Tinh-cam", "The-Loai")
                                    </p>
                                    <p>
                                        @Html.ActionLink("Tình cảm", "Tinh-cam", "The-Loai")
                                    </p>
                                    <div class="clear"></div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="menu_hidden">
                        <p>
                            @Html.ActionLink("Sách mới", "Sach-moi")
                        </p>
                    </li>
                    <li class="menu_hidden">
                        <p>
                            @Html.ActionLink("Sách miễn phí", "Sach-mien-phi")
                        </p>
                    </li>
                    <li class="menu_hidden">
                        <p class="tags_name pc_hover mega_menu">
                            Xếp hạng
                            <i class="fa fa-caret-down"></i>
                        </p>
                        <div class="hidden_menu book_tags">
                            <div class="div_middle">
                                <div class="book_tags_content">
                                    <p>
                                        @Html.ActionLink("Top ngày", "Top-ngay")
                                    </p>
                                    <p>
                                        @Html.ActionLink("Top tháng", "Top-thang")
                                    </p>
                                    <p>
                                        @Html.ActionLink("Top tháng", "Top-thang")
                                    </p>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="menu_hidden">
                        @Html.ActionLink("Theo dõi", "Theo-doi")
                    </li>
                    <li class="menu_hidden">
                        @Html.ActionLink("Lịch sử", "Lich-su")
                    </li>
                </ul>
                <div class="clear"></div>
            </div>
            <div class="nav_menu mobile_display">
                <i onclick="show_bottom_menu(this)" class="fa fa-list" aria-hidden="true"></i>
            </div>
        </div>
    </header>
    <div class="content">
        @RenderBody()

    </div>

    <footer class="light">
        <div class="div_middle">
            <div class="div_middle">
                <p>@DateTime.Now.Year - Do an ASP</p>
            </div>
        </div>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" type="text/javascript"></script>
    <script src="~/Scripts/myscripts/myjs.js" type="text/javascript"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

</body>
</html>
