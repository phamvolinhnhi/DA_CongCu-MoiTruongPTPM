<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">"
<style media="screen">
    p {
        font-size: 20px;
        font-family: Tahoma, Verdana, sans-serif;
        letter-spacing: 2px;
        line-height: 1.8;
    }

    img {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    p.caption {
        line-height: 3;
    }

    /*reset css*/
    div, label {
        margin: 0;
        padding: 0;
    }



    .rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: center;
    }


        .rating > input {
            display: none;
        }

        .rating > label {
            position: relative;
            width: 1.1em;
            font-size: 5vw;
            color: #FFD700;
            cursor: pointer;
        }

            .rating > label::before {
                content: "\2605";
                position: absolute;
                opacity: 0;
            }

            .rating > label:hover:before,
            .rating > label:hover ~ label:before {
                opacity: 1 !important;
            }

        .rating > input:checked ~ label:before {
            opacity: 1;
        }

        .rating:hover > input:checked ~ label:before {
            opacity: 0.4;
        }

    button {
        background: #fff;
        border: unset;
        outline: 0;
        font-size: 18px;
        cursor: pointer;
        color: #65676b;
        padding: 5px 10px;
    }

        button.liked {
            color: #0571ed;
        }

            button.liked i {
                animation: anim 0.5s ease-in-out;
                -webkit-animation: anim 0.5s ease-in-out;
            }
</style>


