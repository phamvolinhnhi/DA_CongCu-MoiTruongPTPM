<div class="div_middle">
    <div class="main_content">
        <div class="book_detail">
            <ol class="breadcrumb" itemscope itemtype="http://schema.org/BreadcrumbList">
                <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                    <a itemprop="item" href="@Url.Action("Index","Home")">
                        <span itemprop="name">Trang chủ</span>
                    </a>
                    <meta itemprop="position" content="1" />
                </li>
                <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                    <a itemprop="item" href="@Url.Action("Detail","Home", new { id = @Model.Book_Id})">
                        <span itemprop="name">@Model.Title</span>
                    </a>
                    <meta itemprop="position" content="2" />
                </li>
            </ol>
            <div class="book_info">
                <div class="book_avatar" itemtype="https://schema.org/ImageObject">
                    <img itemprop="image" alt="@Model.Title" src="~/Content/images/books/@Model.Avatar" />
                </div>
                <div class="book_other" itemscope itemtype="http://schema.org/Book">
                    <h1 itemprop="name">@Model.Title</h1>
                    <div class="txt">
                        <ul class="list-info">
                            <li class="author row">
                                <p class="name col-xs-3">
                                    <i class="fa fa-user"></i>
                                    Tác giả
                                </p>
                                <p class="col-xs-9">@Model.Author</p>
                            </li>
                            <li class="row">
                                <p class="name col-xs-3">
                                    <i class="fa fa-eye">
                                    </i>
                                    Luợt xem
                                </p>
                                <p class="col-xs-9">@Model.View</p>
                            </li>
                        </ul>
                    </div>
                    <ul class="list01">
                        <li>
                            <a href="@Url.Action("The-Loai","Home",new { id = @Model.Categories.Category_Name})">@Model.Categories.Category_Name</a>
                        </li>
                    </ul>
                </div>
            </div>
            <h3>
                <i class="fa fa-indo-circle">
                </i>
                Giới thiệu
            </h3>
            <div class="story-detail-info detail-content">
                <p>
                    @Model.Description
                </p>
            </div>
            <h3>
                <i class="fa fa-database" aria-hidden="true">
                </i>
                Danh sách chương
            </h3>
            <div class="list-chapter">
                <div class="works-chapter-list">

                </div>
            </div>
            <div class="comment-container" id="comment_list">
                <span class="story-detail-title">
                    <i class="fa fa-comments"></i>
                    Bình luận 
                </span>
                <div class="group01 comment-container">

                </div>

            </div>
        </div>
    </div>
</div>